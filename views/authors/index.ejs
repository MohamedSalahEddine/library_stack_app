<h2>Search authors</h2>
<form action="/authors" method="get">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" >
    <button type="submit">submit</button>
</form>
<ul>
    <%  
        authors.forEach(author => { %>
            <li><%- author.name %></li>
        <% });
    %>
</ul>