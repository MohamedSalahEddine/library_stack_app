<div>
    <label for="title">title</label>
    <input type="text" name="title" value="<%= book.title %>">
</div>
<div>
    <label for="author">author</label>
    <select name="author" id="author">
        <% 
            authors.forEach(author => {
                if(author.id === book.author) { %>
                    <option selected label="<%= author.name %>"  value="<%= author.id %>">
                <% }else{%>
                    <option label="<%= author.name %>"  value="<%= author.id %>">
                <%}
            })
            
        %>
    </select>
</div>
<div>
    <label for="publish_day">publish_day</label>
    <input type="date" name="publish_day" id="publish_day" value="<%= book.publish_date?.toISOString().split('T')[0] %>">
    
</div>
<div>
    <label for="page_count">page_count</label>
    <input type="number" name="page_count" id="page_count" value="<%= book.page_count %>">
</div>
<div>
    <label for="cover">cover</label>
    <input type="file" name="cover" id="cover">
</div>
<div>
    <label for="description">description</label>
    <textarea name="description" id="description"><%= book.description %></textarea>
</div>
